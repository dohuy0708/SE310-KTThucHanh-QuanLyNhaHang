  
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}

@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<MenuItem>;
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Menu</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">
                            Tất cả
                        </li>
                        <li data-filter=".oranges">Món chính</li>
                        <li data-filter=".fresh-meat">Món phụ</li>
                        <li data-filter=".vegetables">Thức uống</li>
                        <li data-filter=".fastfood">Combo</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">

            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="@Url.Content("../LayoutWeb/Images/"+@item.Image)" style="background-image: url(&quot;img/featured/feature-1.jpg&quot;);">
                            <ul class="featured__item__pic__hover">
                                <li>
                                    <a href="#"><i class="fa fa-heart"></i></a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-retweet"></i></a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-shopping-cart"></i></a>
                                </li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a asp-controller="Home" asp-action="chitietmonan" asp-route-Mamonan="@item.MenuItemId"> @item.Name</a></h6>
                            <h5>@item.Price</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<div class="product__pagination">
    @Html.PagedListPager(Model, page => Url.Action("Home", new { page = page }))
</div>

